rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Genel okuma/yazma kuralları - Authentication gerekli
    match /artifacts/{appId}/public/data/{document=**} {
      // Kimliği doğrulanmış tüm kullanıcılar okuyabilir ve yazabilir
      allow read, write: if request.auth != null;
    }
    
    // Super admin emailler için özel erişim
    match /artifacts/{appId}/admin/{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.email in [
          "eyupkayd@gmail.com",
          "ukaydi.27@gmail.com", 
          "rec.row27@gmail.com",
          "esenyakuppp@gmail.com"
        ];
    }
    
    // Diğer tüm dökümanlar için varsayılan red
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
